<fieldset>
<legend>New Restaurant</legend>

<% form_for(@restaurant) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :date %>
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price, :size => '4' %>
  </p>
  <p>
    <%= f.label :open %>
    <%= f.check_box :open %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description, :size => '28x2' %>
  </p>
  <p>
	<% @selections.each do |selection| %>
	<%= check_box :required, '1' %>
	<%= check_box :required_to_go, '1' %>
	<%= selection.name %>: 
	<%= selection.options.collect{|o| o.name}.join(', ') %>
	<br/>
	<% end %>
  </p>
  <p style='text-align:center'>
    <%= f.submit "Create" %>
  </p>
<% end %>


</fieldset>